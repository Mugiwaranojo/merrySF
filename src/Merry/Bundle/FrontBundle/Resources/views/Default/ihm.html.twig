			}
		});
		
		$(".device a").click(function(){
			//$('[data-toggle="popover"]').popover("close");
		});
	});
	
	
	function showValueDimmer(newValue)
	{
		$(".rangeDimmer").html(newValue);
	}
	</script>
	
